<resources>

    <!-- MAKE MENU ITEMS FILL ACTION BAR -->
    <!-- this will be applied regardless api version -->
    <style name="Base.AppTheme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    <!-- this will be applied on < API 17 -->
    <style name="AppTheme.Toolbar.ActionButton" parent="@style/Base.AppTheme.Toolbar.ActionButton">
        <item name="android:padding">0dp</item>
    </style>

    <!-- Theme: Snowman -->
    <style name="AppThemeSnowman" parent="Theme.AppCompat.NoActionBar">
        <!-- Make action bar items fill bar -->
        <item name="actionButtonStyle">@style/AppTheme.Toolbar.ActionButton</item>
        <!-- Theme Colors-->
        <item name="colorPrimaryDark">@color/snowmanColorPrimaryDark</item>
        <item name="colorPrimary">@color/snowmanColorPrimary</item>
        <item name="colorAccent">@color/snowmanColorAccent</item>
        <item name="android:windowBackground">@color/snowmanColorScreenBar</item>
        <item name="android:colorBackground">@color/snowmanColorBackground</item>
        <item name="android:textColorPrimary">@color/snowmanTextColorPrimary</item>
        <item name="android:actionBarItemBackground">@color/snowmanIconBackground</item>
        <item name="colorControlNormal">@color/snowmanColorBackground</item>
        <item name="android:textColor">@color/snowmanTextColor</item>
        <item name="android:textColorHint">@color/snowmanTextColorHint</item>
        <item name="android:color">@color/snowmanCardBackground</item>
    </style>

