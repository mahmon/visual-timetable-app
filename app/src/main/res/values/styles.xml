<resources>

     <!-- Theme: Snowman -->
     <style name="AppThemeSnowman" parent="Theme.AppCompat.NoActionBar">
         <item name="colorPrimary">@color/snowmanColorPrimary</item>
         <item name="colorPrimaryDark">@color/snowmanColorPrimaryDark</item>
         <item name="colorAccent">@color/snowmanColorAccent</item>
         <item name="android:background">@color/snowmanColorBackground</item>
     </style>

     <style name="AppThemeSnowman.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
     </style>

     <style name="AppThemeSnowman.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
     <style name="AppThemeSnowman.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Theme: Dark Knight -->
    <style name="AppThemeDarkKnight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/darkKnightColorBackground</item>
    </style>

    <!-- Theme: Bumble Bee -->
    <style name="AppThemeBumbleBee" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/bumbleBeeColorBackground</item>
    </style>

    <!-- Theme: Lady Bug -->
    <style name="AppThemeLadyBug" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/ladyBugColorBackground</item>
    </style>


</resources>
