<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- Colors used for Snowman theme -->

    <!-- colorPrimaryDark: Used for status bar -->
    <color name="snowmanColorPrimaryDark">#303030</color>

    <!-- colorPrimary: Used for top tool bar background and button backgrounds -->
    <color name="snowmanColorPrimary">#A2A2A2</color>

    <!-- colorScreenBar: Used for screen name bar background -->
    <color name="snowmanColorScreenBar">#E0E0E0</color>

    <!-- background: Used for overall background color -->
    <color name="snowmanColorBackground">#FAFAFA</color>

    <!-- textColorPrimary: Used to set color of text in Top Toolbar -->
    <color name="snowmanTextColorPrimary">#212121</color>

    <!-- actionBarItemBackground: Background colour for icons -->
    <color name="snowmanIconBackground">@color/snowmanColorPrimary</color>

    <!-- actionBarItemIconColor: Icon color -->
    <color name="actionBarItemIconColor">@color/snowmanColorBackground</color>

    <!-- colorAccent: Used for progress bar and other highlights -->
    <color name="snowmanColorAccent">@color/snowmanColorPrimaryDark</color>

    <!-- textColorPrimary: Used to set color of all other text -->
    <color name="snowmanTextColor">#424242</color>

    <!-- textColorHint: Used to set color of all other text -->
    <color name="snowmanTextColorHint">#424242</color>

    <!-- snowmanCardBackground: Used to set background of cards -->
    <color name="snowmanCardBackground">#FFFFFF</color>

    <!-- snowmanColorPicTint: Used to overlay add/edit images -->
    <color name="snowmanColorPicTint">@color/snowmanTextColor</color>





    <!-- Colors used for Dark Knight theme -->
    <color name="bumbleBeeColorBackground">#FFCC00</color>

    <!-- Colors used for Bumble Bee theme -->
    <color name="darkKnightColorBackground">#565656</color>

    <!-- Colors used for Lady Bug theme -->
    <color name="ladyBugColorBackground">#FF0000</color>

</resources>