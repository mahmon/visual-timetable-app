<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mahmon.visual_timetable_app.view.StartActivity">

    <!-- Include Toolbars in this layout -->
    <include layout="@layout/tool_bar_top" />

    <include layout="@layout/tool_bar_bottom" />

    <!-- Layout to hold the main center screen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/tool_bar_height"
        android:layout_marginTop="@dimen/tool_bar_height">

        <!-- Text View: To display screen heading -->
        <TextView
            android:id="@+id/txt_start_screen_heading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/txt_start_screen_heading"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_start_screen_heading"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/wide_margin"
            android:text="Dark Theme" />

        <Button
            android:id="@+id/button_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_dark"
            android:layout_margin="@dimen/wide_margin"
            android:text="Light Theme" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>