<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahmon.visual_timetable_app">
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Added forced portrait only mode -->
        <activity
            android:name=".view.StartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Added forced portrait only mode -->
        <activity
            android:name=".view.DisplayEventsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <!-- Added forced portrait only mode -->
        <activity
            android:name=".view.AddEventActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <!-- Added forced portrait only mode -->
        <activity
            android:name=".view.FinishActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <!-- Base Activity for tool bar methods -->
        <activity android:name=".BaseActivity" />

    </application>

</manifest>