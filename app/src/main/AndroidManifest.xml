<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahmon.visual_timetable_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Added forced portrait only mode -->
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Added up navigation back to MainActivity -->
        <!-- Added forced portrait only mode -->
        <activity
            android:name=".DisplayEventsActivity"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- Meta-data tag required to support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Added up navigation back to DisplayEventsActivity -->
        <!-- Added forced portrait only mode -->
        <activity
            android:name=".AddEventActivity"
            android:parentActivityName=".DisplayEventsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- Meta-data tag required to support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayEventsActivity" />
        </activity>

        <!-- Added up navigation back to DisplayEventsActivity -->
        <!-- Added forced portrait only mode -->
        <activity
            android:name=".EditEventActivity"
            android:parentActivityName=".DisplayEventsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- Meta-data tag required to support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayEventsActivity" />
        <!-- Added AppMethods to manifest -->
        </activity>
        <activity android:name=".AppMethods" />

    </application>

</manifest>